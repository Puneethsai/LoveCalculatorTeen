<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LoveCalculatorActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fname_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/textview_drawable5">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/fname_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name"
            android:inputType="text"
            android:textStyle="bold"
            android:textAlignment="center" />
        <requestFocus/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/sname_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/textview_drawable5">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sname_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Second Name"
            android:inputType="text"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/love_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/love_button"
        android:onClick="onClick"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/fname_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:padding="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/couple"/>

                <TextView
                    android:id="@+id/sname_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:padding="5dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Love Percentage"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/love_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:padding="5dp"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result :"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/sky_blue"
                android:fontFamily="serif"
                android:padding="5dp"/>
        </LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>